# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
APP_NAME=Ubiquitous Tribble

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=payment_user
DATABASE_PASSWORD=payment_pass
DATABASE_NAME=payment_db
DATABASE_URL=postgresql://payment_user:payment_pass@localhost:5432/payment_db
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL=false
DATABASE_LOGGING=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# JWT Secrets (Generate with: openssl rand -base64 32)
JWT_ACCESS_SECRET=your-access-secret-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption (Generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-32-byte-encryption-key-change-this
TRANSACTION_SECRET=your-transaction-signing-secret-change-this

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# External Services (Mock)
MOCK_PROVIDER_URL=http://localhost:3001
RECONCILIATION_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3004

# File Storage (MinIO)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=payment-platform

# Email (Mock in development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@ubiquitous-tribble.com

# SMS (Mock in development)
SMS_PROVIDER=mock
SMS_API_KEY=mock-api-key
SMS_SENDER_ID=UbiqTrib

# Logging
LOG_LEVEL=debug
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs
LOG_MAX_FILES=14d

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Session
SESSION_SECRET=your-session-secret-change-this
SESSION_MAX_AGE=86400000

# CORS
CORS_ORIGIN=http://localhost:3002,http://localhost:3000
CORS_CREDENTIALS=true

# Webhooks
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=2000
WEBHOOK_TIMEOUT=10000

# Transaction Limits (in kobo/cents)
MIN_TRANSACTION_AMOUNT=100
MAX_TRANSACTION_AMOUNT=100000000

# KYC Limits (NGN in kobo)
KYC_TIER_0_DAILY_LIMIT=0
KYC_TIER_1_DAILY_LIMIT=5000000
KYC_TIER_2_DAILY_LIMIT=20000000
KYC_TIER_3_DAILY_LIMIT=0

# Fraud Detection
FRAUD_DETECTION_ENABLED=true
FRAUD_VELOCITY_WINDOW=300
FRAUD_MAX_ATTEMPTS=5

# Reconciliation
RECONCILIATION_CRON=0 2 * * *
RECONCILIATION_BATCH_SIZE=1000

# Feature Flags
FEATURE_INTERNATIONAL_TRANSFERS=true
FEATURE_BILL_PAYMENTS=true
FEATURE_FX_EXCHANGE=true
FEATURE_CARD_PAYMENTS=true

# Development
DEBUG=false
SWAGGER_ENABLED=true
