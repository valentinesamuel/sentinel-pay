PORT=5200
APP_NAME=sentinel_pay_core
APP_HOSTNAME=localhost
CORS_WHITELIST=http(s)?:\/\/(.+)\.sentinelpay\.com,http(s)?:\/\/(.+)\.sentinelpay\.com
NODE_ENV=development

DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_DB=
DATABASE_USER=
DATABASE_PASSWORD=
DATABASE_PORT=
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=true
DATABASE_RETRY_ATTEMPTS=5
RUN_MIGRATIONS=true

SWAGGER_API_ROOT=docs

# Azure Blob Storage Configuration
# Use either Connection String (Option 1) OR Managed Identity (Option 2)

# Option 1: Connection String (requires IP whitelisting or trusted services)
AZURE_USE_CONNECTION_STRING=false
AZURE_STORAGE_CONNECTION_STRING=

# Option 2: Managed Identity (for VNet/Private Endpoints)
AZURE_STORAGE_ACCOUNT_NAME=

# Common settings
AZURE_STORAGE_CONTAINER_NAME=uploads
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp,application/pdf
