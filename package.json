{
  "name": "ubiquitous-tribble",
  "version": "1.0.0",
  "description": "Production-grade multi-currency payment and wallet platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run build:payment-api && npm run build:mock-providers && npm run build:reconciliation && npm run build:notification",
    "build:payment-api": "cd apps/payment-api && npm run build",
    "build:mock-providers": "cd apps/mock-providers && npm run build",
    "build:reconciliation": "cd apps/reconciliation-service && npm run build",
    "build:notification": "cd apps/notification-service && npm run build",
    "start:all": "concurrently \"npm:start:payment-api\" \"npm:start:mock-providers\" \"npm:start:reconciliation\" \"npm:start:notification\"",
    "start:payment-api": "cd apps/payment-api && npm run start:dev",
    "start:mock-providers": "cd apps/mock-providers && npm run start:dev",
    "start:reconciliation": "cd apps/reconciliation-service && npm run start:dev",
    "start:notification": "cd apps/notification-service && npm run start:dev",
    "dev": "npm run start:all",
    "lint": "eslint \"{apps,libs}/**/*.ts\" --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "test": "jest",
    "test:unit": "jest --testPathPattern=\\.spec\\.ts$",
    "test:integration": "jest --testPathPattern=\\.integration-spec\\.ts$",
    "test:e2e": "jest --config ./apps/payment-api/test/jest-e2e.json",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:load": "k6 run tests/load/payment-flow.js",
    "migration:generate": "cd apps/payment-api && npm run migration:generate",
    "migration:run": "cd apps/payment-api && npm run migration:run",
    "migration:revert": "cd apps/payment-api && npm run migration:revert",
    "seed": "cd apps/payment-api && npm run seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "concurrently": "^8.2.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/valentinesamuel/ubiquitous-tribble.git"
  },
  "keywords": [
    "payment",
    "fintech",
    "wallet",
    "nestjs",
    "typescript",
    "microservices",
    "payment-gateway",
    "multi-currency",
    "p2p-transfer",
    "financial-system"
  ],
  "author": "Valentine Samuel",
  "license": "MIT"
}
