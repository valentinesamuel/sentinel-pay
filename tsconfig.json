{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@libs/shared/*": ["libs/shared/src/*"],
      "@libs/database/*": ["libs/database/src/*"],
      "@apps/payment-api/*": ["apps/payment-api/src/*"],
      "@apps/mock-providers/*": ["apps/mock-providers/src/*"],
      "@apps/reconciliation-service/*": ["apps/reconciliation-service/src/*"],
      "@apps/notification-service/*": ["apps/notification-service/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
